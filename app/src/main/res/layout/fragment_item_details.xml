<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="selectedItem"
            type="mert.android.com.flickr_app.photo_data.PhotoItem" />

        <variable
            name="userData"
            type="mert.android.com.flickr_app.user_data.Profile" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_details_title"
                style="@style/Base.TextAppearance.AppCompat.Headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{selectedItem.title}" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/tv_item_details_description"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{selectedItem.description.getContent()}" />
            </android.support.v4.widget.NestedScrollView>

            <TextView
                android:id="@+id/tv_item_details_owner"
                style="@style/Base.TextAppearance.AppCompat.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{(userData.getmDetails())[0]}" />

            <TextView
                android:id="@+id/tv_item_details_owner_origin"
                style="@style/Base.TextAppearance.AppCompat.Body2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{(userData.getmDetails())[1]}" />

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <TextView
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:id="@+id/tv_item_details_owner_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{(userData.getmDetails())[2]}" />
            </android.support.v4.widget.NestedScrollView>


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>