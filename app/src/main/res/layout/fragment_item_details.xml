<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="selectedItem"
            type="mert.android.com.flickr_app.photo_data.PhotoItem" />
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/FAB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_baseline_arrow_back_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_details_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{selectedItem.title}" />

            <TextView
                android:id="@+id/tv_item_details_owner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{selectedItem.owner}" />

            <TextView
                android:id="@+id/tv_item_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{selectedItem.description.getContent()}" />


        </LinearLayout>
    </android.support.constraint.ConstraintLayout>
</layout>