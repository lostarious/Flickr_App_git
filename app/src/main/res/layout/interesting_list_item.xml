<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <import type="android.view.View"/>

        <variable
            name="displayedItem"
            type="mert.android.com.flickr_app.photo_data.PhotoItem" />

        <variable
            name="onClickListener"
            type="mert.android.com.flickr_app.interestinglist.DataViewAdapter.RecyclerOnClickListener" />



    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lv_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="@{(v) -> onClickListener.itemClicked(displayedItem)}"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_place_holder"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

    </LinearLayout>
</layout>